{
  "title": "Paramètres de géoréférencement",
  "description": "Configurez les paramètres par défaut pour le processus de géoréférencement",
  "fields": [
    {
      "type": "select",
      "id": "select-algo",
      "name": "select-algo",
      "label": "Algorithme de géoréférencement par défaut",
      "placeholder": "Sélectionner un algorithme",
      "required": false,
      "defaultValue": "polynomial",
      "options": [
        { "value": "polynomial", "label": "Polynomial", "description": "Transformation polynomiale (recommandé pour la plupart des cas)" },
        { "value": "helmert", "label": "Helmert", "description": "Transformation de Helmert (rotation, translation, échelle)" },
        { "value": "affine", "label": "Affine", "description": "Transformation affine (rotation, translation, échelle, cisaillement)" },
        { "value": "tps", "label": "Thin Plate Spline", "description": "Spline de plaque mince (pour les déformations complexes)" }
      ]
    },
    {
      "type": "select",
      "id": "select-resample",
      "name": "select-resample",
      "label": "Méthode de rééchantillonage",
      "placeholder": "Sélectionner une méthode",
      "required": false,
      "defaultValue": "bilinear",
      "options": [
        { "value": "nearest", "label": "Plus proche voisin", "description": "Rapide mais peut créer des effets de pixellisation" },
        { "value": "bilinear", "label": "Bilinéaire", "description": "Bon équilibre qualité/performance (recommandé)" },
        { "value": "cubic", "label": "Cubique", "description": "Meilleure qualité mais plus lent" },
        { "value": "lanczos", "label": "Lanczos", "description": "Très haute qualité pour les images détaillées" }
      ]
    },
    {
      "type": "select",
      "id": "select-quality",
      "name": "select-quality",
      "label": "Qualité image Gallica",
      "placeholder": "Sélectionner une qualité",
      "required": false,
      "defaultValue": "hd",
      "options": [
        { "value": "medium", "label": "Medium", "description": "Qualité standard, traitement plus rapide" },
        { "value": "hd", "label": "Haute définition", "description": "Meilleure qualité, traitement plus lent" }
      ]
    },
    {
      "type": "checkbox",
      "id": "checkbox-compression",
      "name": "checkbox-compression",
      "label": "Activer la compression des images",
      "hint": "Réduire la taille des fichiers générés (recommandé pour l'archivage)",
      "required": false,
      "defaultValue": true
    },
    {
      "type": "checkbox",
      "id": "checkbox-transparent",
      "name": "checkbox-transparent",
      "label": "Rendre transparent le fond des cartes",
      "hint": "Utilise la valeur 0 pour définir la transparence (utile pour les superpositions)",
      "required": false,
      "defaultValue": false
    },
    {
      "type": "checkbox",
      "id": "checkbox-matrice",
      "name": "checkbox-matrice",
      "label": "Enregistrer les points de contrôle",
      "hint": "La matrice de points est enregistrée en base de données pour réutilisation",
      "required": false,
      "defaultValue": true
    },
    {
      "type": "number",
      "id": "input-scale",
      "name": "input-scale",
      "label": "Échelle de démarrage",
      "placeholder": "100000",
      "hint": "Échelle utilisée pour l'affichage initial (ex: 100000 pour 1/100.000)",
      "required": false,
      "min": 1000,
      "max": 10000000,
      "step": 1000,
      "defaultValue": 100000
    },
    {
      "type": "separator",
      "label": "Sauvegarde automatique"
    },
    {
      "type": "checkbox",
      "id": "checkbox-autosave",
      "name": "checkbox-autosave",
      "label": "Activer la sauvegarde automatique des points de contrôle",
      "hint": "Sauvegarde automatiquement vos points de contrôle périodiquement et lors de la fermeture de la page",
      "required": false,
      "defaultValue": true
    },
    {
      "type": "select",
      "id": "select-backup-frequency",
      "name": "select-backup-frequency",
      "label": "Fréquence de sauvegarde automatique",
      "placeholder": "Sélectionner une fréquence",
      "required": false,
      "defaultValue": "120",
      "dependency": {
        "field": "checkbox-autosave",
        "value": true
      },
      "options": [
        { "value": "120", "label": "2 minutes", "description": "Recommandé - équilibre optimal" },
        { "value": "300", "label": "5 minutes", "description": "Sauvegarde espacée" },
        { "value": "600", "label": "10 minutes", "description": "Sauvegarde très espacée" }
      ]
    },
    {
      "type": "number",
      "id": "input-max-backups",
      "name": "input-max-backups",
      "label": "Nombre maximum de sauvegardes à conserver",
      "placeholder": "10",
      "hint": "Les anciennes sauvegardes sont automatiquement supprimées",
      "required": false,
      "min": 1,
      "max": 50,
      "step": 1,
      "defaultValue": 10,
      "dependency": {
        "field": "checkbox-autosave",
        "value": true
      }
    }
  ],
  "submitButton": {
    "text": "Enregistrer les paramètres",
    "classes": "fr-btn fr-mt-3w",
    "icon": "fr-icon-save-line"
  },
  "resetButton": {
    "text": "Valeurs par défaut",
    "classes": "fr-btn fr-btn--secondary",
    "icon": "fr-icon-refresh-line"
  }
}
